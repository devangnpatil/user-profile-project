@import 'Color'
.hero-section
    background-image: url('../../images/header-img-bg.png')
    height: 853px
    padding-top: 372px
    background-repeat: no-repeat
    background-size: cover
    border-bottom: 7px solid transparent
    border-image-source: url('../../images/separator_one.png')
    border-image-slice: 30
    .hero-header
        h2
            margin-bottom: 42px
            color: white
            font-family: 'Gotham Rounded Light Italic'
            font-size: 55px
            line-height: 25px
    .search-bar-section
        input[type="text"]
            // box-shadow: 0px 2px 0px #e2e2e2
            box-shadow: 0px 2px 0px light-grey
            font-style: italic
            height: 50px
            font-family: 'Gotham Rounded Light Italic'
            color: #c7c7c7
        .btn-search
            height 50px
            width: 140px
            background: #4acaff
            font-family: 'Gotham Rounded Light Italic'
            border: none
            box-shadow: 0px 4px 0px #3baedd
            span
                padding-right: 6px
                font-size: 14px
        .select-job
            color: white
            font-family: 'Gotham Rounded Light Italic'
    .btn-register
        height 50px
        width: 140px
        background: #4acaff
        color: #fff
        font-family: 'Gotham Rounded Light'
        border: none
        box-shadow: 0px 4px 0px #3baedd
    .register-button-wrapper
        margin-top: 90px
        text-align: center